.span-24.first
	%h2.home#main_home_heading	Welcome to Cannapages
	#home_page_featured
		= link_to @strain do
			= image_tag "home_page_featured.png", alt: "weed reviews"
			#fieldguide
				%ul.fieldguidehome
					%li
						%p= ("<span class='first'>Strain:</span> #{@strain.name}").html_safe
					%li
						%p= ("<span class='first'>Lineage:</span> #{@strain.origins}").html_safe
					%li
						%p= ("<span class='first'>Dominance:</span> #{@strain.dominance}").html_safe
					%li
						%p= ("<span class='first'>Notes:</span> #{@strain.bio_exerpt}").html_safe
	.span-11#home_text
		%h2	Explore the largest collection of cannabis dispensaries and "kind" companies in the world
		%br
		%h3 Check out our <a href="/strains">Field Guide</a> to find the best marijuana and to make an informed choice on the strain variety for you. Utilize our weed maps to find where to buy marijuana.
	
.span-24#homefeatured
	.header
		= image_tag "aarow-logo.png", id: "aarowlogo", alt: "marijuana listings"
		%h2#maptext= "All listings near #{@user_location.max_info_string}"
		= link_to "change location", '#', id: "location_change"
	.span-11.first
		#map
	.span-11.last
		#featured_listings_container
			- @featured_listings.each do |listing|
				.featured_listing
					= image_tag "/assets/featured-marker-icon.png", class: :icon_left, alt: listing.name
					= link_to listing do
						%h4= truncate(listing.name, length: 31)
					%p.distance= ("<span>Distance:</span> #{listing.distance.round(2)}").html_safe
					%p.special= best_special_for_home_page( listing )
.span-24#home_slider
	%h2= "Current Cannabis Specials near #{@user_location.max_info_string}"
	.special_slider
		.special_slider_left
			.arrow_left
		- @specials_listings.each_with_index do |listing,index|
			= link_to listing do
				.special_slider_entry{style: index > 2 ? "display:none" : "", index: index, class: index == 1 ? "middle" : ""}
					= image_tag listing.logo(:medium), alt: listing.name
					= best_special_for_home_page_slider( listing )
		.special_slider_right
			.arrow_right
= link_to forums_path do
	.span-8.first.home_btns_bottom
		%h2.bottom_text The Harvest Feed
		%p.bottom_text &nbsp;Cannapages Forums
		%ul.bottom_text 
			%li Industry Job List
			%li Cannabis Q&A
			%li Wholesale List
		= image_tag "harvest_logo_120.png", alt: "marijuana forum"
.span-8.home_btns_bottom
	%h2.bottom_text_mid CannaSaver
	%p.bottom_text_mid &nbsp;Cannapages Discounts
	%ul.bottom_text_mid
		%li Daily Specials
		%li Weekly Specials
		%li Coupons
	= image_tag "saver_logo_120.png", alt: "marijuana deals specials"
= link_to cadets_home_path do
	.span-8.last.home_btns_bottom
		%h2.bottom_text CannaCadets
		%p.bottom_text &nbsp;Cannapages Members
		%ul.bottom_text
			%li Win Free Stuff
			%li Special Deals
			%li Piece Graveyard
		= image_tag "cadet_logo_120.png", alt: "marijuana comunity"
