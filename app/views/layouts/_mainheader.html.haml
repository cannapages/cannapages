#topblackbar
#mainheader
	#searchbar
		= image_tag "logotop.png", id: "logotop"
		#headspacer
		#mainsearchform
			= simple_form_for Search.new, action:"/" do |f|
				= f.input :query, label: false, placeholder: "Query", input_html: {class:"topsearch"}
				%p#near near
				= f.input :user_location, label: false, placeholder: "UserLocation", input_html: {class:"topsearch"}
			.mainsearchbtn
				= image_tag "searchicon.png", id:"topsearchicon"
	#navbar
		= image_tag "/assets/navbar.png"
		#navlinks
			%ul
				%li
					= link_to "#" do
						= image_tag "/assets/field-logo.png"
					= link_to "#" do
						= image_tag "/assets/news-icon.png"
					= link_to "#" do
						= image_tag "/assets/critiques-icon.png"
					= link_to "#" do
						= image_tag "/assets/members-icon.png"
					= link_to "#" do
						= image_tag "/assets/forum-icon.png"
					= link_to "#" do
						= image_tag "/assets/saver-icon.png"
