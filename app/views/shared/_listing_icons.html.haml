.listing_icons
	- unless @listing.critiques.empty?
		= link_to "/critiques?listing=#{@listing.slug}" do
			= image_tag "critique-icon-small.png", class: "listing-icon"
	- if @listing.has_menu?
		= link_to_modal listing_path(@listing, intent: "menu") do
			= image_tag "critique-icon-small.png", class: "listing-icon"
