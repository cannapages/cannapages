%h3= "Volume #{@volume.volume_number}"
%h4= "The first article in column 2 will be the headline article"

%table
	%tr
		%td.bold Column One
		%td.bold move
		%td.bold remove
		%td.bold Column Two
		%td.bold move
		%td.bold remove
		%td.bold Column Three
		%td.bold move
		%td.bold remove
	- @max_array_size.times do |i|
		%tr
			%td
				- if @three_col_array[0][i]
					= @three_col_array[0][i].title
			%td
				- if @three_col_array[0][i]
					= link_to "Up", volumes_move_element_path( @volume.volume_number, 1, i, -1 ) unless i == 0
					= link_to "Down", volumes_move_element_path( @volume.volume_number, 1, i, 1 ) unless i == @three_col_array[0].size - 1
			%td
				- if @three_col_array[0][i]
					= link_to "[x]", volumes_remove_element_path( @volume.volume_number, 1, i ), method: :delete, confirm: "Are you sure?" 
			%td
				- if @three_col_array[1][i]
					= @three_col_array[1][i].title
			%td
				- if @three_col_array[1][i]
					= link_to "Up", volumes_move_element_path( @volume.volume_number, 2, i, -1 ) unless i == 0
					= link_to "Down", volumes_move_element_path( @volume.volume_number, 2, i, 1 ) unless i == @three_col_array[1].size - 1
			%td
				- if @three_col_array[1][i]
					= link_to "[x]", volumes_remove_element_path( @volume.volume_number, 2, i ), method: :delete, confirm: "Are you sure?" 
			%td
				- if @three_col_array[2][i]
					= @three_col_array[2][i].title
			%td
				- if @three_col_array[2][i]
					= link_to "Up", volumes_move_element_path( @volume.volume_number, 3, i, -1 ) unless i == 0
					= link_to "Down", volumes_move_element_path( @volume.volume_number, 3, i, 1 ) unless i == @three_col_array[2].size - 1
			%td		
				- if @three_col_array[2][i]
					= link_to "[x]", volumes_remove_element_path( @volume.volume_number, 3, i ), method: :delete, confirm: "Are you sure?"

%hr
%h3= link_to "Add articles to volume", "/volumes/add_articles/#{@volume.volume_number}/nil/nil/nil", id: "add_articles_to_volume_link"
%table
	%tr
		%td.bold Add to column one
		%td
			%select#add_article_to_col1
				%option{slug: 'nil'} No article selected
				- @articles.each do |article|
					%option{slug: article.slug}= "#{article.title} - #{article.content.size}"
	%tr
		%td.bold Add to column two
		%td
			%select#add_article_to_col2
				%option{slug: 'nil'} No article selected
				- @articles.each do |article|
					%option{slug: article.slug}= "#{article.title} - #{article.content.size}"
	%tr
		%td.bold Add to column three
		%td
			%select#add_article_to_col3
				%option{slug: 'nil'} No article selected
				- @articles.each do |article|
					%option{slug: article.slug}= "#{article.title} - #{article.content.size}"
